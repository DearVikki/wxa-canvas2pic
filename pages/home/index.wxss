.mask{
  position: fixed;
  background: rgba(0, 0, 0, .5);
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 10;
}
.btn{
  padding:0 20rpx;
  line-height:1.5;
  font-size:30rpx;
  margin-top:40rpx;
}
.hide{
  display: none;
}